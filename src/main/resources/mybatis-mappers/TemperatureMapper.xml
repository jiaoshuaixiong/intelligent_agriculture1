<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.topwulian.dao.TemperatureDao">

	<sql id="where">
		<where>
			<if test="params.id != null and params.id != ''">
				and id = #{params.id} 
			</if>
			<if test="params.t != null and params.t != ''">
				and t = #{params.t} 
			</if>
			<if test="params.ddatetime != null and params.ddatetime != ''">
				and ddatetime = #{params.ddatetime} 
			</if>
			<if test="params.obtid != null and params.obtid != ''">
				and obtid = #{params.obtid} 
			</if>
		
		</where>
	</sql>

	<select id="count" resultType="int">
		select count(1) from t_temperature t
		<include refid="where" />
	</select>

	<select id="list" resultType="com.topwulian.model.Temperature">
		select * from t_temperature t
		<include refid="where" />
		${params.orderBy}
		limit #{offset}, #{limit}
	</select>

	<update id="update">
		update t_temperature t
		<set>
			<if test="t != null">
				t = #{t}, 
			</if>
			<if test="ddatetime != null">
				ddatetime = #{ddatetime}, 
			</if>
			<if test="obtid != null">
				obtid = #{obtid}, 
			</if>

		</set>

		where t.id = #{id}
	</update>

</mapper>
